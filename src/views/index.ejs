<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <title>sjdjdshj</title>
    <style>
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }

        .img {
            max-width: 500px;
        }
    </style>

</head>

<body>



    <!--Chido-->

    <div data-role="page" id="home">
        <center>
            <h1 style="color: rgb(207, 163, 194);">Bienvenido a la pasteleria</h1>
        </center>
        <div data-role="header" data-theme="b" class="custom-header" style="background-color: rgb(172, 187, 34);">
            <div data-role="navbar">
                <ul>
                    <li><a href="#home" class="ui-btn-active">Pateles</a></li>
                    <li><a href="#imagenes">Fotos</a></li>
                </ul>
            </div>
        </div>

        <div role="main" class="ui-content" style="background-color: rgba(219, 146, 180, 0.897);">
            <form action="/api/products/" method="POST">

                <label for="txt_codigo_barras" style="color: rgb(170, 73, 157)">Tipo de pastel:</label>
                <input type="text" name="barcode" id="txt_codigo_barras" placeholder="Tipo de pastel"  value="">

                <label for="txt_description" style="color: rgb(161, 47, 118);">Sabor:</label>
                <input type="text" name="description" id="txt_description" placeholder="Sabor"  value="">

                <label for="txt_brand" style="color: rgb(121, 14, 112);">Color:</label>
                <input type="text" name="brand" id="txt_brand" placeholder="Color"  value="">

                <label for="txt_price" style="color: rgb(142, 29, 146);">Precio:</label>
                <input type="text" name="price" id="txt_price" placeholder="Precio"  value="">

                <label for="txt_cost" style="color: rgb(73, 17, 56);">Costo:</label>
                <input type="text" name="cost" id="txt_cost" placeholder="Costo"  value="">

                <label for="txt_stock" style="color:rgb(116, 33, 111);">Existencias</label>
                <input type="text" name="stock" id="txt_stock" placeholder="Existencias"  value="">

                <label for="flip-2" style="color: rgb(109, 14, 109);">Activo</label>
                <select name="status" id="flip-2" data-role="slider">
                        <option value="0">No</option>
                        <option value="1">Si</option>
                </select>


                <label for="submit-6" style="color: rgb(117, 15, 95);">Guardar</label>
                <button type="submit" id="submit-6" class="ui-shadow ui-btn ui-corner-all ui-ini" style="color: rgb(167, 47, 107);">Guardar</button>
            </form>
            <form>
                <input data-type="search" id="searchForCollapsibleSet">
            </form>
            <div data-role="collapsibleset" data-filter="true" data-inset="true" id="collapsiblesetForFilter" data-input="#searchForCollapsibleSet">

                <% products.forEach((product)=> { %>
                    <div data-role="collapsible" data-filtertext="<%= product.description%> ">

                        <h3>
                            <%= product.description %>
                        </h3>
                        <ul data-role="listview" data-inset="false">
                            <li>Codigo de barras :<%= product.barcode %>
                            </li>
                            <li> Marca:<%= product.brand %>
                            </li>
                            <li> precio: <%= product.price %>
                            </li>
                            <li> costo: <%= product.cost %>
                            </li>
                            <li> existencia: <%= product.stock %>
                            </li>
                            <li> status :<%= product.status %>
                            </li>
                            <li><a href="/api/products/<%= product.barcode %>" class="ui-btn">Editar</a></li>
                            <li><a href="/api/products/delete/<%= product.barcode %>" class="ui-btn">Eliminar</a></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div data-role="footer" data-theme="b" class="custom-footer">
            <h5 style="color: rgb(104, 12, 73);">Jareni</h5>
        </div>
    </div>

    <!--Imagenes-->
    <div data-role="page" id="imagenes">
        <center>
            <h1 style="color: rgb(207, 163, 194);">Bienvenido a la pasteleria</h1>
        </center>
        <div data-role="header" data-theme="b" class="custom-header">
            <div data-role="navbar">
                <ul>
                    <li><a href="#home" class="ui-btn-active">Pateles</a></li>
                    <li><a href="#imagenes">Fotos</a></li>
                </ul>
            </div>
        </div>

        <div role="main" class="ui-content" style="background-color: rgba(219, 146, 180, 0.897);">
            <div class="container">
                <div class="img">
                    <img src="https://sacher.com.mx/media/magefan_blog/pastelin.jpg" style="max-width:50%;">
                </div>

                <div style="max-width:400px; padding:20px;">
                    <h3 style="text-align:center;margin-bottom:10px;">Descripcion: Pastel de chocolate con cubierta de durazno</h3>
                    <h3 style="text-align:center;margin-bottom:10px;">precio: $300</h3>
                    <h3 style="text-align:center;margin-bottom:10px;">existencia: 4</h3>
                </div>
            </div>
            <br>
            <br>
            <br>
            <div class="container">
                <div class="img">
                    <img src="https://eatmefoodboutique.mx/cdn/shop/products/1_717eccf2-c8c2-45d2-83c6-9b8897149954.png?v=1672343477" style="max-width:50%;">
                </div>

                <div style="max-width:400px; padding:20px;">
                    <h3 style="text-align:center;margin-bottom:10px;">Descripcion: Pastel de chocolate con chispitas</h3>
                    <h3 style="text-align:center;margin-bottom:10px;">precio: $200</h3>
                    <h3 style="text-align:center;margin-bottom:10px;">existencia: 2</h3>
                </div>
            </div>
            <br>
            <br>
            <br>
            <div class="container">
                <div class="img">
                    <img src="https://i0.wp.com/foodandpleasure.com/wp-content/uploads/2023/12/pastel-cumpleanos-Maria-Fortunata.webp?fit=1200%2C800&ssl=1" style="max-width:50%;">
                </div>

                <div style="max-width:400px; padding:20px;">
                    <h3 style="text-align:center;margin-bottom:10px;">Descripcion: pastel de cumpleaños sabor fresa</h3>
                    <h3 style="text-align:center;margin-bottom:10px;">precio: $350</h3>
                    <h3 style="text-align:center;margin-bottom:10px;">existencia: 2</h3>
                </div>
            </div>
        </div>

        <div data-role="footer" data-theme="b" class="custom-footer">
            <h5 style="color: rgb(104, 12, 73);">Jareni</h5>
        </div>
    </div>
</body>

</html>